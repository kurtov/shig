<%= content_for :page_name do %>
	Знаменитости
<% end %>

<%= content_for :page_actions do %>
	<%= link_to new_person_path , :class => "btn btn-success" do %>
		<span class="glyphicon glyphicon-plus"></span> Создать новую
	<% end %>
<% end %>

<% if @people.present? %>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Знаменитость</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @people.each do |person| %>
				<tr>
					<td>
						<%= "#{person.name}" %>
					</td>
					<td>
						<%= link_to 'Редактировать', edit_person_path(person) %>
					</td>
					<td>
						<%= link_to 'Удалить', person_path(person), method: :delete %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
	<p>
		Ни одной знаменитости еще нет
	</p>
<% end %>