<% content_for :page_name do %>
  Редактирование синонима для знаменитости <%= @person.name %>
<% end %>

<%= render :partial => 'shared/error_messages', :locals => { :target => @synonym } %>



<%= form_for @synonym, :url => synonym_path(@synonym), :html => {:class => "form-horizontal", :role => "form"} do |f| %>
  <%= render :partial => 'shared/synonym_form', :locals => { :f => f } %>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= link_to edit_person_path(@person), :class => "btn btn-default" do %>
        <span class="glyphicon glyphicon-arrow-left"></span> Назад
      <% end %>
    	
      <%= button_tag(type: 'submit', class: "btn btn-default") do %>
        <span class="glyphicon glyphicon-ok"></span> Изменить
      <% end %>
    </div>
  </div>
<% end %>