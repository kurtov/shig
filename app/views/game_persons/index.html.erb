<% content_for :left_nav do%>
  <%= render :partial => 'shared/navbar', :locals => { :game => @game } %>
<% end %>

<%#= link_to 'Добавить знаменитость', new_person_path(:game_id => @game.id) %>
<%= link_to 'Добавить знаменитость', new_game_person_path(@game) %>

<% if @people.present? %>
	<table class="table table-striped">
		<thead>
			<tr>
				<th>Знаменитости</th>
				<th></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @people.each do |person| %>
				<tr>
					<td>
						<%= "#{person.name}" %>
					</td>
					<td>
						<%= link_to 'Редактировать', edit_person_path(person, :game_id => @game.id) %>
					</td>
					<td>
						<%= link_to 'Удалить', [@game, person], method: :delete %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
	<p>
		Ни однго персонажа еще нет
	</p>
<% end %>