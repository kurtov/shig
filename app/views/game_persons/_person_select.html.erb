<div class="row">
  <%= form_for @game, :url => game_persons_path(@game), :method => :post, :html => {:class => "form-horizontal", :role => "form"} do |f| %>
    <div class="form-group">
      <%= label_tag :person, "Знаменитость", :class => "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <%= select_tag :person, options_from_collection_for_select(@all_people, "id", "name"), :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.submit "Добавить", :class => "btn btn-default"%>
      </div>
    </div>
  <% end %>
</div>
